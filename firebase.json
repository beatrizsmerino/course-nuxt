{
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log"
			],
			"predeploy": [
				"npm run lint",
				"node sync-dependencies.js",
				"cd functions/ && npm install",
				"npm run build",
				"rm -rf functions/nuxt",
				"cp -r .nuxt/ functions/nuxt/",
				"cp nuxt.config.js functions/"
			]
		}
	],
	"hosting": {
		"predeploy": [
			"rm -rf public/*",
			"mkdir -p public/_nuxt",
			"cp -r .nuxt/dist/client/ public/_nuxt",
			"cp -a static/. public/"
		],
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"function": "ssrapp"
			}
		]
	}
}
